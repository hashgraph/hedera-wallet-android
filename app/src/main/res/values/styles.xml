<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="FingerPrintActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="HgcButton">
        <item name="android:layout_height">@dimen/height_button_hgc</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/font_regular_large</item>
        <item name="android:textColor">@color/text_button_default</item>
        <item name="android:background">@drawable/background_button_hgc</item>
    </style>

    <style name="Paragraph">
        <item name="android:textSize">@dimen/font_regular_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="OnboardingParagraph" parent="Paragraph">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>

    </style>

    <style name="CaptionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_regular_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/styrenea_regular</item>
    </style>

    <style name="TopBarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_regular_very_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/styrenea_regular</item>
    </style>

    <style name="TitleBarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_light_very_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/styrenea_light</item>
    </style>

    <style name="EditTextSingleLineBox" parent="EditTextMultiLineBox">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EditTextMultiLineBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_light_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
        <item name="android:background">@drawable/user_inform_edittext_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor_view</item>

    </style>

    <style name="Checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_regular_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:buttonTint">@color/text_secondary</item>
    </style>

    <style name="ContentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/margin_page_content</item>
        <item name="android:paddingRight">@dimen/margin_page_content</item>
        <item name="android:paddingStart">@dimen/margin_page_content</item>
        <item name="android:paddingEnd">@dimen/margin_page_content</item>
        <item name="android:background">@color/background_page_content</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="PageLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background_page</item>
    </style>

    <style name="KeyTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_light_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:background">@drawable/user_inform_edittext_background</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="RestoreWalletTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_regular_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@drawable/user_inform_edittext_background</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="HgcPayLayoutButton">
        <item name="android:layout_height">@dimen/height_button_hgc</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">@dimen/font_regular_large</item>
        <item name="android:textColor">@color/text_button_default</item>
        <item name="android:background">@drawable/background_button_hgc</item>
    </style>

    <style name="HgcPayClickableTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_regular_medium</item>
        <item name="android:textColor">@color/tint</item>
        <item name="android:fontFamily">@font/styrenea_regular</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ListRowTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_regular_large</item>
        <item name="android:fontFamily">@font/styrenea_regular</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="HgcButtonRequestLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/height_button_hgc_solid_request</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">@dimen/font_regular_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_button_request_view</item>
    </style>

    <style name="SettingsCaptionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_regular_very_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/styrenea_regular</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_regular_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:buttonTint">@color/text_secondary</item>
    </style>

    <style name="AccountListTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_regular_very_large</item>
        <item name="android:textColor">@color/text_very_dark</item>
        <item name="android:fontFamily">@font/styrenea_regular</item>
    </style>

    <style name="ImageviewCopy">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ic_copy</item>
    </style>

    <style name="CaptionTextNote">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">NOTE</item>
        <item name="android:textSize">@dimen/font_regular_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/styrenea_regular</item>
    </style>

    <style name="PrimaryTextRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_light_very_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/styrenea_light</item>
    </style>

    <style name="SecondaryTextRow">
        <item name="android:textSize">@dimen/font_light_large</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/styrenea_light</item>
    </style>

    <style name="SmallTextRow">
        <item name="android:textSize">@dimen/font_light_small</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/styrenea_light</item>
    </style>

    <style name="DateTimeRow">
        <item name="android:textSize">@dimen/font_light_small</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/styrenea_light</item>
    </style>

    <style name="Bip39Message">
        <item name="android:textSize">@dimen/font_light_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/styrenea_light</item>
        <item name="android:background">@color/portal_page_color</item>
    </style>

    <style name="EditTextAmountBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_light_very_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:background">@drawable/user_inform_edittext_background</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor_view</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="TextViewInsideAmountEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/hederah_regular</item>
        <item name="android:textSize">@dimen/font_light_large</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="TextviewWalletKeywords">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/font_regular_very_large</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/styrenea_regular</item>
    </style>

    <style name="DrawerItemText">
        <item name="android:textSize">@dimen/font_regular_medium</item>
        <item name="android:textColor">@color/text_drawer_menu</item>
        <item name="android:fontFamily">@font/styrenea_regular</item>
    </style>

    <style name="AppTheme.NavigationView">
        <item name="android:textColorSecondary">#777</item>
    </style>
</resources>
