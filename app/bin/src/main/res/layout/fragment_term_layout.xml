<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="opencrowd.hgc.hgcwallet.ui.onboard.OnboardActivity">
    <include layout="@layout/title_bar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/ContentLayout"
                android:background="#ffffff"
                android:padding="5dp"
                android:fontFamily="@font/styrenea_regular"
                android:textSize="@dimen/font_regular_medium"
                android:text="@string/text_term"
                android:textColor="@color/black" />
        </ScrollView>


        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_term_accept"
                style="@style/HgcButton"
                android:layout_width="wrap_content"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_page_content"
                android:layout_marginTop="@dimen/margin_page_content"
                android:text="@string/btn_text_accept"
                android:textAllCaps="false"
                android:visibility="gone"
                android:textColor="@color/text_button_primary" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>